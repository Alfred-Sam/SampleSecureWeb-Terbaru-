@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hands On Secure Coding</h1>
    <p>Secure Coding</p>
    <p>Username: @ViewBag.username</p>
    
    <ul>Fruits:
        @foreach (var fruit in ViewBag.fruits)
        {
            <li>@fruit</li>
        }
    </ul>

    <!-- Tambahkan link Change Password di sini -->
    <div>
        <a href="/Account/ChangePassword" class="btn btn-primary">Change Password</a>
    </div>
</div>
